<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LinearLayout_MouseActivity" >

    <nl.broslo.brosloremotemouse.customviews.GestureOverlayCustomView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/GestureOverlayView_MouseActivity"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.0"
        android:clickable="false"
        android:gestureColor="@android:color/white"
        android:background="@drawable/border_black"></nl.broslo.brosloremotemouse.customviews.GestureOverlayCustomView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ImageButton_LeftClick"
            android:layout_weight="1.0"
            android:background="@drawable/border_black" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/ImageButton_Keyboard"
                android:layout_weight="1.0"
                android:background="@drawable/border_black" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/ImageButton_Settings"
                android:layout_weight="1.0"
                android:src="@android:drawable/ic_menu_manage"
                android:scaleType="center"
                android:background="@drawable/border_black" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ImageButton_RightClick"
            android:layout_weight="1.0"
            android:background="@drawable/border_black" />

    </LinearLayout>

</LinearLayout>